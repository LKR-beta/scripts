local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

local function isAlive(player)
	local char = player.Character
	local humanoid = char and char:FindFirstChildWhichIsA("Humanoid")
	return humanoid and humanoid.Health > 0
end

local function getMatchedPlayer(input)
	local keyword = input:lower()
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer then
			if plr.Name:lower():find(keyword) or plr.DisplayName:lower():find(keyword) then
				return plr
			end
		end
	end
	return nil
end

local function getNearbyPlayers(originChar, excludeChar, range)
	local list = {}
	if not originChar or not originChar:FindFirstChild("HumanoidRootPart") then return list end
	local originPos = originChar.HumanoidRootPart.Position
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer and plr.Character and plr.Character ~= excludeChar then
			local hrp = plr.Character:FindFirstChild("HumanoidRootPart")
			if hrp and (hrp.Position - originPos).Magnitude <= range then
				table.insert(list, plr)
			end
		end
	end
	return list
end

local function fireHandleToTarget(charList)
	local tool = LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Tool")
	if not tool then return end
	local handle = tool:FindFirstChild("Handle")
	if not handle then return end

	for i, target in ipairs(charList) do
		if i > 3 then break end
		for _, part in ipairs(target.Character:GetChildren()) do
			if part:IsA("BasePart") then
				for j = 1, 9999 do
					firetouchinterest(handle, part, 0)
					firetouchinterest(handle, part, 1)
				end
				break
			end
		end
	end
end

local currentTarget = nil

local function setupTextboxListener(box)
	RunService.Heartbeat:Connect(function()
		local input = box.Text
		if input == "" then
			currentTarget = nil
			return
		end

		local matched = getMatchedPlayer(input)
		if matched and isAlive(matched) and LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Tool") then
			currentTarget = matched
		else
			currentTarget = nil
		end

		if currentTarget and currentTarget.Character then
			local targets = getNearbyPlayers(currentTarget.Character, currentTarget.Character, 15)
			fireHandleToTarget(targets)
		end
	end)
end

local gui = Instance.new("ScreenGui")
gui.Name = "TargetToolFire"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 60)
frame.Position = UDim2.new(0.5, -100, 0.1, 0)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
frame.BorderSizePixel = 0
frame.BackgroundTransparency = 0.1
frame.Parent = gui

local box = Instance.new("TextBox")
box.Position = UDim2.new(0, 10, 0, 20)
box.Size = UDim2.new(0, 180, 0, 30)
box.PlaceholderText = "give killaura"
box.TextColor3 = Color3.new(1, 1, 1)
box.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
box.TextScaled = true
box.Font = Enum.Font.Gotham
box.Parent = frame

setupTextboxListener(box)
