local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer

local MAX_TARGETS = 2
local ATTACK_DISTANCE = 15
local TOUCH_REPEAT = 999

local function isAlive(player)
	local char = player.Character
	local hum = char and char:FindFirstChildWhichIsA("Humanoid")
	return hum and hum.Health > 0
end

local function getMatchedTarget(input)
	local keyword = input:lower()
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer then
			if plr.Name:lower():find(keyword) or plr.DisplayName:lower():find(keyword) then
				return plr
			end
		end
	end
end

local function getNearbyPlayers(originChar, excludeChar, range)
	local list = {}
	if not originChar or not originChar:FindFirstChild("HumanoidRootPart") then return list end
	local originPos = originChar.HumanoidRootPart.Position
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer and plr.Character and plr.Character ~= excludeChar and isAlive(plr) then
			local hrp = plr.Character:FindFirstChild("HumanoidRootPart")
			if hrp and (hrp.Position - originPos).Magnitude <= range then
				table.insert(list, plr)
			end
		end
	end
	return list
end

local function fireHandleToTarget(target)
	local tool = LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Tool")
	local handle = tool and tool:FindFirstChild("Handle")
	if not handle then return end

	for _, part in ipairs(target.Character:GetChildren()) do
		if part:IsA("BasePart") then
			for i = 1, TOUCH_REPEAT do
				firetouchinterest(handle, part, 0)
				firetouchinterest(handle, part, 1)
			end
			break
		end
	end
end

local activeTargets = {}

local function updateAttackFromBox(box)
	RunService.Heartbeat:Connect(function()
		local input = box.Text
		if input == "" then
			activeTargets = {}
			return
		end

		local originPlayer = getMatchedTarget(input)
		if not originPlayer or not isAlive(originPlayer) then
			activeTargets = {}
			return
		end

		if #activeTargets < MAX_TARGETS then
			local nearby = getNearbyPlayers(originPlayer.Character, originPlayer.Character, ATTACK_DISTANCE)
			for _, p in ipairs(nearby) do
				if not table.find(activeTargets, p) then
					table.insert(activeTargets, p)
					if #activeTargets >= MAX_TARGETS then break end
				end
			end
		end

		for i = #activeTargets, 1, -1 do
			if not isAlive(activeTargets[i]) then
				table.remove(activeTargets, i)
			end
		end

		for _, target in ipairs(activeTargets) do
			if isAlive(target) then
				fireHandleToTarget(target)
			end
		end
	end)
end

local gui = Instance.new("ScreenGui")
gui.Name = "TargetByTextbox"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = LocalPlayer:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 60)
frame.Position = UDim2.new(0.5, -100, 0.1, 0)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
frame.BackgroundTransparency = 0.1
frame.BorderSizePixel = 0
frame.Parent = gui

local box = Instance.new("TextBox")
box.Position = UDim2.new(0, 10, 0, 20)
box.Size = UDim2.new(0, 180, 0, 30)
box.PlaceholderText = "give killaura"
box.TextColor3 = Color3.new(1, 1, 1)
box.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
box.TextScaled = true
box.Font = Enum.Font.Gotham
box.Parent = frame

updateAttackFromBox(box)
