local p = game.Players.LocalPlayer
local t = "gihuy10"
local kickDistance = 4

game.Players.PlayerAdded:Connect(function(v)
    if v.Name == t then
        v.CharacterAdded:Connect(function(c)
            local hrp = c:WaitForChild("HumanoidRootPart")

            while true do
                wait(0.1)
                local distance = (p.Character.HumanoidRootPart.Position - hrp.Position).Magnitude
                if distance <= kickDistance then
                    p:Kick("You kicked! because of lkrðŸ‘¿")
                    break
                end
            end
        end)
    end
end)

if game.Players:FindFirstChild(t) then
    local v = game.Players[t]
    v.CharacterAdded:Connect(function(c)
        local hrp = c:WaitForChild("HumanoidRootPart")

        while true do
            wait(0.1)
            local distance = (p.Character.HumanoidRootPart.Position - hrp.Position).Magnitude
            if distance <= kickDistance then
                p:Kick("You kicked! because of lkrðŸ‘¿")
                break
            end
        end
    end)
end
