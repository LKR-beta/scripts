local p = game.Players.LocalPlayer
local targetPlayerName = "gihuy10"
local kickDistance = 4

local function onCharacterAdded(targetCharacter)
    local hrp = targetCharacter:WaitForChild("HumanoidRootPart")
    local function checkDistance()
        if p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
            local playerHrp = p.Character.HumanoidRootPart
            local distance = (playerHrp.Position - hrp.Position).Magnitude
            if distance <= kickDistance then
                game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer("í—¤ì‘... lkr ì£¼ì¸ë‹ˆìž„..â™¡", "All")
                wait(1)
                p:Kick("You kicked! because of lkrðŸ‘¿")
            end
        end
    end

    targetCharacter:WaitForChild("HumanoidRootPart").Touched:Connect(checkDistance)
end

local function onPlayerAdded(player)
    if player.Name == targetPlayerName then
        player.CharacterAdded:Connect(onCharacterAdded)
        if player.Character then
            onCharacterAdded(player.Character)
        end
    end
end

game.Players.PlayerAdded:Connect(onPlayerAdded)
if game.Players:FindFirstChild(targetPlayerName) then
    onPlayerAdded(game.Players[targetPlayerName])
end
