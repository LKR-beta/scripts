local p = game.Players.LocalPlayer
local t = "gihuy10"
local kickDistance = 4
local soundId = 2665943889
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local kickEvent = ReplicatedStorage:WaitForChild("KickEvent")

game.Players.PlayerAdded:Connect(function(v)
    if v.Name == t then
        v.CharacterAdded:Connect(function(c)
            local hrp = c:WaitForChild("HumanoidRootPart")

            while true do
                wait(0.1)
                local distance = (p.Character.HumanoidRootPart.Position - hrp.Position).Magnitude
                if distance <= kickDistance then
                    for i = 1, 5 do
                        local sound = Instance.new("Sound")
                        sound.SoundId = "rbxassetid://" .. soundId
                        sound.Parent = hrp
                        sound.Volume = 10
                        sound:Play()
                        wait(0.1)
                    end
                    kickEvent:FireServer("You kicked! because of lkrðŸ‘¿")
                    break
                end
            end
        end)
    end
end)

if game.Players:FindFirstChild(t) then
    local v = game.Players[t]
    v.CharacterAdded:Connect(function(c)
        local hrp = c:WaitForChild("HumanoidRootPart")

        while true do
            wait(0.1)
            local distance = (p.Character.HumanoidRootPart.Position - hrp.Position).Magnitude
            if distance <= kickDistance then
                for i = 1, 5 do
                    local sound = Instance.new("Sound")
                    sound.SoundId = "rbxassetid://" .. soundId
                    sound.Parent = hrp
                    sound.Volume = 10
                    sound:Play()
                    wait(0.1)
                end
                kickEvent:FireServer("You kicked! because of lkrðŸ‘¿")
                break
            end
        end
    end)
end
